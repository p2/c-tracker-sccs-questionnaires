								{
									"url": "http://hl7.org/fhir/StructureDefinition/minValue",
									"valueInteger": 0
								},
								{
									"url": "http://hl7.org/fhir/StructureDefinition/minValue",
									"valueString": "Hepatitis C had no effect on my work"
								},
								{
									"url": "http://hl7.org/fhir/StructureDefinition/maxValue",
									"valueInteger": 10
								},
								{
									"url": "http://hl7.org/fhir/StructureDefinition/maxValue",
									"valueString": "Hepatitis C completely prevented me from working"
								}
							],
							"text": "During the past seven days, how much did your hepatitis C affect your productivity while you were working?",
							"type": "integer"
						}
